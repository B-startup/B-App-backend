
// Prisma Client Generator
generator client {
  provider = "prisma-client-js"
}


// Database connection
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model
model User {
  id               Int       @id @default(autoincrement())
  email            String    @unique
  name             String
  password         String
  image            String?
  isVerified       Boolean   @default(false)
  otpCode          String?
  otpCodeExpiresAt DateTime?

  @@index([id]) // Index for id field
}
